{% extends '::base.html.twig' %}
{% block menu -%}
{% embed  '::parametres/menu.html.twig' %}
{% block menu_tarifs_open %}open{% endblock %}
{% block menu_penalites_open %}open{% endblock %}
{% block menu_penalites_actif %}active{% endblock %}
{% endembed %}
{% endblock %}
{% block ariane -%}
    <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('parametre_index') }}">Paramètres</a></li>
          <li class="breadcrumb-item"><a href="{{ path('admin_parametres_penalite_index') }}">Pénalités</a></li>
          <li class="breadcrumb-item">Détail</li>
    </ol>
{% endblock %}
{% block pagetitle -%}VOIR UNE PENALITE{% endblock %}
{% block actions %}
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_penalite_index') }}">LISTER</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_penalite_edit', { 'id': penalite.id }) }}">MODIFIER</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_penalite_new') }}">CREER</a></label>
    <label class="btn btn-outline-secondary">
        {{ form_start(delete_form) }}
            <input type="submit" value="SUPPRIMER" onclick="return confirm('Etes-vous sûr de vouloir supprimer?');">
        {{ form_end(delete_form) }}
    </label>
{% endblock %}
{% block body %}
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Durée min</th>
                <td>{{ penalite.dureeMin }}</td>
            </tr>
            <tr>
                <th>Durée max</th>
                <td>{{ penalite.dureeMax }}</td>
            </tr>
            <tr>
                <th>Pourcentage</th>
                <td>{{ penalite.pourcentage }}</td>
            </tr>
            <tr>
                <th>Créé par</th>
                <td>{{ penalite.creePar }}</td>
            </tr>
            <tr>
                <th>Modifié par</th>
                <td>{{ penalite.modifierPar }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{% if penalite.dateCreation %}{{ penalite.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de dernière modification</th>
                <td>{% if penalite.dateModification %}{{ penalite.dateModification|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
