{% extends '::base.html.twig' %}
{% block menu -%}
{% embed  '::parametres/menu.html.twig' %}
{% block menu_vehicules_open %}open{% endblock %}
{% block menu_formatimmatriculations_open %}open{% endblock %}
{% block menu_formatimmatriculations_actif %}active{% endblock %}
{% endembed %}
{% endblock %}
{% block menu_parametres_actif %}active{% endblock %}
{% block ariane -%}
    <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('parametre_index') }}">Paramètres</a></li>
          <li class="breadcrumb-item"><a href="{{ path('admin_parametres_formatimmatriculation_index') }}">Formats d'immatriculation</a></li>
          <li class="breadcrumb-item">Détail</li>
    </ol>
{% endblock %}
{% block pagetitle -%}VOIR UN FORMAT D'IMMATRICULATION{% endblock %}
{% block actions %}
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_formatimmatriculation_index') }}">LISTER</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_formatimmatriculation_edit', { 'id': formatImmatriculation.id }) }}">MODIFIER</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_formatimmatriculation_new') }}">CREER</a></label>
    <label class="btn btn-outline-secondary">
        {{ form_start(delete_form) }}
            <input type="submit" value="SUPPRIMER" onclick="return confirm('Etes-vous sûr de vouloir supprimer?');">
        {{ form_end(delete_form) }}
    </label>
{% endblock %}
{% block body %}
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Type</th>
                <td>{{ formatImmatriculation.typeImmatriculation.code }}</td>
            </tr>
            <tr>
                <th>Présentation</th>
                <td>{{ formatImmatriculation.presentation }}</td>
            </tr>
            <tr>
                <th>Regex</th>
                <td>{{ formatImmatriculation.regex }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{% if formatImmatriculation.actif %}OUI{% else %}NON{% endif %}</td>
            </tr>
            <tr>
                <th>Créé par</th>
                <td>{{ formatImmatriculation.creePar }}</td>
            </tr>
            <tr>
                <th>Modifié par</th>
                <td>{{ formatImmatriculation.modifierPar }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{% if formatImmatriculation.dateCreation %}{{ formatImmatriculation.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{% if formatImmatriculation.dateModification %}{{ formatImmatriculation.dateModification|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
