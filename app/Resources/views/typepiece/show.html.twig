{% extends '::base.html.twig' %}
{% block ariane -%}
    <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('admin_parametres_typepiece_index') }}">Types de pièce</a></li>
          <li class="breadcrumb-item">Détail</li>
    </ol>
{% endblock %}
{% block pagetitle -%}VOIR UN TYPE DE PIECE D'IDENTITE{% endblock %}
{% block actions %}
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_typepiece_index') }}">Liste des types de pièce</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_typepiece_edit', { 'id': typePiece.id }) }}">Modifier</a></label>
    <label class="btn btn-outline-secondary">
        {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer" onclick="return confirm('Etes-vous sûr de vouloir supprimer?');">
        {{ form_end(delete_form) }}
    </label>
{% endblock %}
{% block body %}
    <table class="table table-hover">
        <tbody>

            <tr>
                <th>Code</th>
                <td>{{ typePiece.code }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ typePiece.libelle }}</td>
            </tr>
            <tr>
                <th>Créé par</th>
                <td>{{ typePiece.creePar }}</td>
            </tr>
            <tr>
                <th>Modifié par</th>
                <td>{{ typePiece.modifierPar }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{% if typePiece.dateCreation %}{{ typePiece.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de dernière modification</th>
                <td>{% if typePiece.dateModification %}{{ typePiece.dateModification|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
