{% extends '::base.html.twig' %}
{% block ariane -%}
    <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('admin_parametres_controle_index') }}">Contrôle</a></li>
          <li class="breadcrumb-item">Détail</li>
    </ol>
{% endblock %}
{% block pagetitle -%}VOIR UN CONTROLE{% endblock %}
{% block actions %}
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_controle_index') }}">Liste des contrôles</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_controle_edit', { 'id': controle.id }) }}">Modifier</a></label>
    <label class="btn btn-outline-secondary">
        {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer" onclick="return confirm('Etes-vous sûr de vouloir supprimer?');">
        {{ form_end(delete_form) }}
    </label>
{% endblock %}
{% block body %}
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Libelle</th>
                <td>{{ controle.libelle }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ controle.code }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ controle.detail }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{% if controle.actif %}Oui{% else %}Non{% endif %}</td>
            </tr>
            <tr>
                <th>Créé par</th>
                <td>{{ controle.creePar }}</td>
            </tr>
            <tr>
                <th>Modifié par</th>
                <td>{{ controle.modifierPar }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{% if controle.dateCreation %}{{ controle.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de dernière modification</th>
                <td>{% if controle.dateModification %}{{ controle.dateModification|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
