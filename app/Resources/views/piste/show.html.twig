{% extends '::base.html.twig' %}
{% block ariane -%}
    <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('admin_parametres_piste_index') }}">Piste</a></li>
          <li class="breadcrumb-item">Détail</li>
    </ol>
{% endblock %}
{% block pagetitle -%}VOIR UNE PISTE{% endblock %}
{% block actions %}
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_piste_index') }}">Liste des pistes</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_piste_edit', { 'id': piste.id }) }}">Modifier</a></label>
    <label class="btn btn-outline-secondary">
        {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer" onclick="return confirm('Etes-vous sûr de vouloir supprimer?');">
        {{ form_end(delete_form) }}
    </label>
{% endblock %}
{% block body %}
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Numero</th>
                <td>{{ piste.numero }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{% if piste.actif %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Créé par</th>
                <td>{{ piste.creePar }}</td>
            </tr>
            <tr>
                <th>Modifié par</th>
                <td>{{ piste.modifierPar }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{% if piste.dateCreation %}{{ piste.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de dernière modification</th>
                <td>{% if piste.dateModification %}{{ piste.dateModification|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
