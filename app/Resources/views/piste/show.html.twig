{% extends '::base.html.twig' %}
{% block menu -%}
{% embed  '::parametres/menu.html.twig' %}
{% block menu_centre_open %}open{% endblock %}
{% block menu_piste_open %}open{% endblock %}
{% block menu_piste_actif %}active{% endblock %}
{% endembed %}
{% endblock %}
{% block menu_parametres_actif %}active{% endblock %}
{% block ariane -%}
    <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('parametre_index') }}">Paramètres</a></li>
          <li class="breadcrumb-item"><a href="{{ path('admin_parametres_piste_index') }}">Piste</a></li>
          <li class="breadcrumb-item">Détail</li>
    </ol>
{% endblock %}
{% block pagetitle -%}VOIR UNE PISTE{% endblock %}
{% block actions %}
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_piste_index') }}">LISTER</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_piste_edit', { 'id': piste.id }) }}">MODIFIER</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_piste_new') }}">CREER</a></label>
    <label class="btn btn-outline-secondary">
        {{ form_start(delete_form) }}
            <input type="submit" value="SUPPRIMER" onclick="return confirm('Etes-vous sûr de vouloir supprimer?');">
        {{ form_end(delete_form) }}
    </label>
{% endblock %}
{% block body %}
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Numéro</th>
                <td>{{ piste.numero }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{% if piste.actif %}Active{% else %}Inactive{% endif %}</td>
            </tr>
            <tr>
                <th>Répertoire MAHA</th>
                <td>piste.repertoire</td>
            </tr>
            <tr>
                <th>Créé par</th>
                <td>{{ piste.creePar }}</td>
            </tr>
            <tr>
                <th>Modifié par</th>
                <td>{{ piste.modifierPar }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{% if piste.dateCreation %}{{ piste.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de dernière modification</th>
                <td>{% if piste.dateModification %}{{ piste.dateModification|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
