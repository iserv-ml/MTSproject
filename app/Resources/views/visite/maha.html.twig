{% extends '::base.html.twig' %}
{% block menu -%}
{% embed  '::visite/menu.html.twig' %}
{% block menu_controles_actif %}active{% endblock %}
{% endembed %}
{% endblock %}
{% block menu_controle_actif %}active{% endblock %}
{% block menu_caisse_actif %}active{% endblock %}
{% block ariane -%}
    <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('visite_controle') }}">Contrôles</a></li>
          <li class="breadcrumb-item">Controler</li>
    </ol>
{% endblock %}
{% block pagetitle -%}CONTROLER UN VEHICULE{% endblock %}
{% block actions %}
    <label class="btn btn-outline-secondary"><a href="{{ path('visite_controle') }}">RETOUR A LA LISTE</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('visite_maha', { 'id': visite.id }) }}">RECUPERER LES RESULTATS MAHA</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('generer_cg', { 'id': visite.id }) }}">REGENERER LE FICHIER CG</a></label>
{% endblock %}
{% block body %}
     <form method='POST' action='{{ path('visite_controleur') }}?id={{ visite.id }}'>
        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>Immatriculation</th>
                    <td>{% if visite.immatriculation_v is not null %} {{ visite.immatriculation_v }} {%  else %}{{ visite.vehicule.immatriculation }}{%  endif %}</td>
                </tr>
                <tr>
                    <th>Type Chassis</th>
                    <td>{{ visite.vehicule.chassis }}</td>
                </tr>
                <tr>
                    <th>Chassis</th>
                    <td>{{ visite.vehicule.typeChassis }}</td>
                </tr>
                <tr>
                    <th>Propriétaire</th>
                    <td>{{ visite.vehicule.proprietaire.nomComplet }}</td>
                </tr>
                <tr>
                    <th>Genre (Usage)</th>
                    <td>{{ visite.vehicule.typeVehicule.genre.code }} ({{ visite.vehicule.typeVehicule.usage.libelle }})</td>
                </tr>
                <tr><th>Marque</th>
                    <td>{%if visite.vehicule.modele%}{{ visite.vehicule.modele.marque.libelle }}{% endif %}</td>
                </tr>
                <tr><th>Carrosserie</th>
                    <td>{{ visite.vehicule.typeVehicule.carrosserie.libelle }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{% if visite.revisite %}REVISITE{%else%}NORMALE{%endif%}</td>
                </tr>
            </tbody>
        </table>
    </form>
{% endblock %}
