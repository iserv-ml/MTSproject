{% extends '::base.html.twig' %}
{% block menu -%}
{% embed  '::parametres/menu.html.twig' %}
{% block menu_vehicules_open %}open{% endblock %}
{% block menu_certificats_open %}open{% endblock %}
{% block menu_certificats_actif %}active{% endblock %}
{% endembed %}
{% endblock %}
{% block menu_parametres_actif %}active{% endblock %}
{% block ariane -%}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('parametre_index') }}">Paramètres</a></li>
        <li class="breadcrumb-item">Certificat</li>
    </ol>
{% endblock %}
{% block pagetitle -%}PARAMETRAGE DU CERTIFICAT{% endblock %}
{% block actions %}
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        {% if boutton == 0 %} 
            <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametre_vehicule_certificat_new') }}">CREER</a></label>
        {% else %}
            <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametre_vehicule_certificat_modifier') }}">MODIFIER</a></label>
        {% endif %}
    {% endif %}
{% endblock %}
{% block body -%}
<div class="table-responsive">
    <table id="liste_clients" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatable dataTable no-footer">
        <thead>
            <tr>
                <th>Crée par</th>
                <th>Modifié par</th>
                <th>Date de création</th>
                <th>Date de dernière modification</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parametreCertificat in parametreCertificats %}
            <tr>
                <td>{{ parametreCertificat.creePar }}</td>
                <td>{{ parametreCertificat.modifierPar }}</td>
                <td>{% if parametreCertificat.dateCreation %}{{ parametreCertificat.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if parametreCertificat.dateModification %}{{ parametreCertificat.dateModification|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_parametre_vehicule_certificat_show', { 'id': parametreCertificat.id }) }}">Aperçu</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
