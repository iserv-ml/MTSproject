{% extends '::base.html.twig' %}
{% block menu -%}
{% embed  '::parametres/menu.html.twig' %}
{% block menu_centre_open %}open{% endblock %}
{% block menu_chaine_open %}open{% endblock %}
{% block menu_chaine_actif %}active{% endblock %}
{% endembed %}
{% endblock %}
{% block menu_parametres_actif %}active{% endblock %}
{% block ariane -%}
    <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('parametre_index') }}">Paramètres</a></li>
          <li class="breadcrumb-item"><a href="{{ path('admin_parametres_chaine_index') }}">Chaine</a></li>
          <li class="breadcrumb-item">Détail</li>
    </ol>
{% endblock %}
{% block pagetitle -%}VOIR UNE CHAINE{% endblock %}
{% block actions %}
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_chaine_index') }}">LISTER</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_chaine_edit', { 'id': chaine.id }) }}">MODIFIER</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_chaine_new') }}">CREER</a></label>
    <label class="btn btn-outline-secondary">
        {{ form_start(delete_form) }}
            <input type="submit" value="SUPPRIMER" onclick="return confirm('Etes-vous sûr de vouloir supprimer?');">
        {{ form_end(delete_form) }}
    </label>
{% endblock %}
{% block body %}
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Caisse</th>
                <td>{{ chaine.caisse.numero }}</td>
            </tr>
            <tr>
                <th>Piste</th>
                <td>{{ chaine.piste.numero }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{% if chaine.actif %}Active{% else %}Inactive{% endif %}</td>
            </tr>
            <tr>
                <th>Sur RDV?</th>
                <td>{% if chaine.surRendezVous %}Oui{% else %}Non{% endif %}</td>
            </tr>
            <tr>
                <th>Créé par</th>
                <td>{{ chaine.creePar }}</td>
            </tr>
            <tr>
                <th>Modifié par</th>
                <td>{{ chaine.modifierPar }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{% if chaine.dateCreation %}{{ chaine.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de dernière modification</th>
                <td>{% if chaine.dateModification %}{{ chaine.dateModification|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
