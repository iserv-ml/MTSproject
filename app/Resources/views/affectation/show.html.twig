{% extends '::base.html.twig' %}
{% block menu -%}
{% include '::parametres/menu.html.twig' %}
{% endblock %}
{% block ariane -%}
    <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('admin_gestion_affectation_index') }}">Affectations aux caisses</a></li>
          <li class="breadcrumb-item">Détail</li>
    </ol>
{% endblock %}
{% block pagetitle -%}VOIR UNE AFFECTATION{% endblock %}
{% block actions %}
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_gestion_affectation_index') }}">Liste des affectations aux caisses</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_gestion_affectation_edit', { 'id': affectation.id }) }}">Modifier</a></label>
    <label class="btn btn-outline-secondary">
        {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer" onclick="return confirm('Etes-vous sûr de vouloir supprimer?');">
        {{ form_end(delete_form) }}
    </label>
{% endblock %}
{% block body %}
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Agent</th>
                <td>{{ affectation.agent }}</td>
            </tr>
            <tr>
                <th>Caisse</th>
                <td>{{ affectation.caisse }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if affectation.actif %}Active{% else %}Inactive{% endif %}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if affectation.date %}{{ affectation.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Créé par</th>
                <td>{{ affectation.creePar }}</td>
            </tr>
            <tr>
                <th>Modifié par</th>
                <td>{{ affectation.modifierPar }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{% if affectation.dateCreation %}{{ affectation.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de dernière modification</th>
                <td>{% if affectation.dateModification %}{{ affectation.dateModification|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
