{% extends '::base.html.twig' %}
{% block menu -%}
{% include '::parametres/menu.html.twig' %}
{% endblock %}
{% block ariane -%}
    <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('admin_gestion_group_index') }}">Groupes</a></li>
          <li class="breadcrumb-item">Détail</li>
    </ol>
{% endblock %}
{% block pagetitle -%}VOIR UN GROUPE D'UTILISATEUR{% endblock %}
{% block actions %}
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_gestion_group_index') }}">Liste des groupes</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_gestion_group_edit', { 'id': group.id }) }}">Modifier</a></label>
    <label class="btn btn-outline-secondary">
        {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer" onclick="return confirm('Etes-vous sûr de vouloir supprimer?');">
        {{ form_end(delete_form) }}
    </label>
{% endblock %}
{% block body %}
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ group.name }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% for role in group.roles %}
                        {{ role }}<br/>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

{% endblock %}
