{% extends '::base.html.twig' %}
{% block menu -%}
{% embed  '::centre/menu.html.twig' %}
{% block menu_sorties_actif %}active{% endblock %}
{% endembed %}
{% endblock %}
{% block ariane -%}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin_gestion_centre_sorties_index') }}">Sorties de caisse</a></li>
        <li class="breadcrumb-item">Détail</li>
    </ol>
{% endblock %}
{% block menu_gestion_actif %}active{% endblock %}
{% block pagetitle -%}DETAIL D'UNE SORTIE DE CAISSE{% endblock %}
{% block actions %}
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_gestion_centre_sorties_index') }}">LISTER</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_gestion_centre_sorties_edit', { 'id': sortieCaisse.id }) }}">MODIFIER</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_gestion_centre_sorties_new') }}">CREER UNE SORTIE</a></label>
    <label class="btn btn-outline-secondary">
        {{ form_start(delete_form) }}
            <input type="submit" value="SUPPRIMER" onclick="return confirm('Etes-vous sûr de vouloir supprimer?');">
        {{ form_end(delete_form) }}
    </label>
{% endblock %}
{% block body %}
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Type</th>
                <td>{{ sortieCaisse.type }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ sortieCaisse.montant }}</td>
            </tr>
            <tr>
                <th>Créé par</th>
                <td>{{ sortieCaisse.creePar }}</td>
            </tr>
            <tr>
                <th>Modifié par</th>
                <td>{{ sortieCaisse.modifierPar }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{% if sortieCaisse.dateCreation %}{{ sortieCaisse.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de dernière modification</th>
                <td>{% if sortieCaisse.dateModification %}{{ sortieCaisse.dateModification|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
