{% extends '::base.html.twig' %}
{% block menu -%}
{% embed  '::parametres/menu.html.twig' %}
{% block menu_maha_open %}open{% endblock %}
{% block menu_categoriecontroles_open %}open{% endblock %}
{% block menu_categoriecontroles_actif %}active{% endblock %}
{% endembed %}
{% endblock %}
{% block menu_parametres_actif %}active{% endblock %}
{% block ariane -%}
    <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('parametre_index') }}">Paramètres</a></li>
          <li class="breadcrumb-item"><a href="{{ path('admin_parametres_categoriecontrole_index') }}">Catégories de contrôle</a></li>
          <li class="breadcrumb-item">Détail</li>
    </ol>
{% endblock %}
{% block pagetitle -%}VOIR UNE CATEGORIE DE CONTROLE{% endblock %}
{% block actions %}
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_categoriecontrole_index') }}">LISTER</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_categoriecontrole_edit', { 'id': categorieControle.id }) }}">MODIFIER</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_categoriecontrole_new') }}">CREER</a></label>
    <label class="btn btn-outline-secondary">
        {{ form_start(delete_form) }}
            <input type="submit" value="SUPPRIMER" onclick="return confirm('Etes-vous sûr de vouloir supprimer?');">
        {{ form_end(delete_form) }}
    </label>
{% endblock %}
{% block body %}
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Libelle</th>
                <td>{{ categorieControle.libelle }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ categorieControle.code }}</td>
            </tr>
            <tr>
                <th>Créé par</th>
                <td>{{ categorieControle.creePar }}</td>
            </tr>
            <tr>
                <th>Modifié par</th>
                <td>{{ categorieControle.modifierPar }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{% if categorieControle.dateCreation %}{{ categorieControle.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de dernière modification</th>
                <td>{% if categorieControle.dateModification %}{{ categorieControle.dateModification|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
