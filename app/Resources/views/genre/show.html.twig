{% extends '::base.html.twig' %}
{% block ariane -%}
    <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('admin_parametres_genre_index') }}">Genres</a></li>
          <li class="breadcrumb-item">Détail</li>
    </ol>
{% endblock %}
{% block pagetitle -%}VOIR UN GENRE DE VEHICULE{% endblock %}
{% block actions %}
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_genre_index') }}">Liste des genres</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_parametres_genre_edit', { 'id': genre.id }) }}">Modifier</a></label>
    <label class="btn btn-outline-secondary">
        {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer" onclick="return confirm('Etes-vous sûr de vouloir supprimer?');">
        {{ form_end(delete_form) }}
    </label>
{% endblock %}
{% block body %}
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Libelle</th>
                <td>{{ genre.libelle }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ genre.code }}</td>
            </tr>
            <tr>
                <th>Créé par</th>
                <td>{{ genre.creePar }}</td>
            </tr>
            <tr>
                <th>Modifié par</th>
                <td>{{ genre.modifierPar }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{% if genre.dateCreation %}{{ genre.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de dernière modification</th>
                <td>{% if genre.dateModification %}{{ genre.dateModification|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}