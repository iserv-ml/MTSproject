{% extends '::base.html.twig' %}
{% block menu -%}
{% include '::parametres/menu.html.twig' %}
{% endblock %}
{% block ariane -%}
    <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('admin_gestion_utilisateur_index') }}">Utilisateurs</a></li>
          <li class="breadcrumb-item">Détail</li>
    </ol>
{% endblock %}
{% block pagetitle -%}VOIR UN UTILISATEUR{% endblock %}
{% block actions %}
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_gestion_utilisateur_index') }}">Liste des utilisateurs</a></label>
    <label class="btn btn-outline-secondary"><a href="{{ path('admin_gestion_utilisateur_edit', { 'id': utilisateur.id }) }}">Modifier</a></label>
    <label class="btn btn-outline-secondary">
        {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer" onclick="return confirm('Etes-vous sûr de vouloir supprimer?');">
        {{ form_end(delete_form) }}
    </label>
{% endblock %}
{% block body %}
    <table class="table table-hover">
        <tbody>
        <tbody>
            <tr>
                <th>Login</th>
                <td>{{ utilisateur.username }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ utilisateur.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ utilisateur.prenom }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ utilisateur.telephone }}</td>
            </tr>
            <tr>
                <th>Groupes</th>
                <td>
                     {% for group in utilisateur.groups %}
                        {{ group.name }}<br/>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
